@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="homepagecontainer container-fluid">

    <div class="">

           <div class="row justify-content-center text-center">
           <div class="col-md-8 mt-5">
                <h1 class="display-4 fw-bold mb-4 text-white" >
                    Welcome to Ward 17
                    <span class="d-block" style="color:#af111c">Lalitpur</span>
                    <span class="d-block" style="color:#ffffff">Lukhunsi</span>

                </h1>
                <p class="text-white fw-normal fs-5 mb-5">
                    Discover local updates, participate in community trainings, and stay connected with your ward.
                </p>
            </div>
        </div>

        <div class="row mt-5">
            @{
                var cards = new[]
                {
            new { Title = "Ongoing Trainings", Description = "View all active training sessions and workshops currently running in your ward.", Color = "bg-gradient-red", Url = "https://localhost:7214/Trainings/Ongoing" },
            new { Title = "Upcoming Training", Description = "Stay updated with future training programs and community events.", Color = "bg-gradient-slate", Url = "https://localhost:7214/Trainings/Upcoming" },
            new { Title = "Community Updates", Description = "Get the latest news and announcements from your ward office.", Color = "bg-gradient-dark", Url = "https://lalitpurmun.gov.np/" }
            };
            }

            @foreach (var card in cards)
            {
                <div class="col-md-4">
                    <div class="card h-100 @card.Color text-white">
                        <div class="card-body">
                            <h3 class="card-title">@card.Title</h3>
                            <p class="card-text">@card.Description</p>
                            <a href="@card.Url" class="btn btn-link text-white" target="_blank">Learn More →</a>
                        </div>
                    </div>
                </div>
            }
        </div>

   
    </div>
</div>

<footer class="bg-white text-dark mt-5 py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>Contact</h5>
                <p>Email: info@ward17.com</p>
                <p>Phone: +977-1-1234567</p>
            </div>
            <div class="col-md-4">
                <h5>Help</h5>
                <p>FAQs</p>
                <p>Support Center</p>
            </div>
            <div class="col-md-4">
                <h5>Location</h5>
                <p>Ward 17 Office, Lalitpur</p>
                <p>Nepal</p>
            </div>
        </div>
        <div class="row mt-3 text-center">
            <div class="col-12">
                <p class="mb-0">© 2025 Ward 17 Lalitpur. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>
