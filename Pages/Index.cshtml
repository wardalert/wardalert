@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="homepagecontainer container-fluid" s>

    <div class="">

            <div class="row justify-content-center text-center">
           <div class="col-md-8 mt-5">
                <h1 class="display-4 fw-bold mb-4 text-white" >
                    Welcome to Ward 17
                    <span class="d-block" style="color:#af111c">Lalitpur</span>
                </h1>
                <p class="text-white fw-normal fs-5 mb-5">
                    Discover local updates, participate in community trainings, and stay connected with your ward.
                </p>
            </div>
        </div>

        <div class="row mt-5">
            @{
                var cards = new[]
             {
            new { Title = "Ongoing Trainings", Description = "View all active training sessions and workshops currently running in your ward.", Color = "bg-gradient-red" },
            new { Title = "Upcoming Events", Description = "Stay updated with future training programs and community events.", Color = "bg-gradient-slate" },
            new { Title = "Community Updates", Description = "Get the latest news and announcements from your ward office.", Color = "bg-gradient-dark" }
            };
            }

         @foreach (var card in cards)
            {
                <div class="col-md-4 ">
                    <div class="card h-100 @card.Color text-white">
                        <div class="card-body">
                            <h3 class="card-title">@card.Title</h3>
                            <p class="card-text">@card.Description</p>
                            <a href="#" class="btn btn-link text-white">Learn More →</a>
                        </div>
                    </div>
                </div>
            }
        </div>
   
    </div>
</div>