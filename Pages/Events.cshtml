@page
@model wardalert.Pages.EventsModel
@{
    ViewData["Title"] = "Ward Events";
}

<div class="container pt-5">
    <div class="text-center mb-4 pb-2 border-bottom">
        <h2 class="text-dark">@ViewData["Title"]</h2>
        <p class="text-muted">Latest events and updates from your ward</p>
    </div>

    <div class="bg-light rounded-3 p-3 p-md-4 shadow-sm">
        @if (Model.Events.Any())
        {
            @foreach (var ev in Model.Events)
            {
                <div class="mb-4 pb-3 border-bottom bg-white">
                    <!-- bg-white creates a white gap between articles -->
                    <h2 class="h5 px-2 pt-2 text-primary">@ev.Title</h2>
                    <p class="text-body px-2 pt-2">@ev.Description</p>
                    <small class="text-muted  d-flex px-4 justify-content-end">Uploaded on @ev.UploadedAt.ToString("MMMM dd, yyyy")</small>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted p-4">
                No events available at the moment.
            </div>
        }
    </div>
</div>
