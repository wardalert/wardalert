                $.ajax({
                    method: "GET",
                    url: url,
                    success: function (resp) {
                        if (resp.success) {
                            alert("User " + status.toLowerCase() + " successfully!");
                            location.reload(); // Refresh page after success
                        } else {
                            alert("Error: " + resp.message);
                        }
                    },
                    error: function (xhr) {
                        console.log("AJAX Error:", xhr.responseText);
                        alert("Something went wrong!");
                    }
                });
            }
        });

    </script>
</body>
</html>
