@page
@model wardalert.Pages.Admin.UserlistModel
@{
    Layout = "_AdminLayout";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <button onclick="history.back()" class="btn btn-secondary mb-3">Go Back</button>

    <div class="p-2">
        <h2>User List of Training ID : @Model.Userlists.FirstOrDefault()?.TrainingId</h2>

    </div>

    <div class="container mt-5">
        <h1 class="text-center mb-4">User List</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Gender</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Userlists != null && Model.Userlists.Any())
                    {
                        @foreach (var user in Model.Userlists)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Address</td>
                                <td>@user.Phone</td>
                                <td>@user.Gender</td>
                            </tr>
                            }
                    }else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No user records found.</td>
                        </tr>
                    
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
