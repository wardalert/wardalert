@page
@model wardalert.Pages.Admin.TrainingModel

@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Training List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Training List</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TrainingLists != null && Model.TrainingLists.Any())
                    {
                        @foreach (var training in Model.TrainingLists)
                        {
                            <tr>
                                <td>@training.ComponentId</td> <!-- Ensure this matches your C# model -->
                                <td>@training.Title</td>
                                <td>@training.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="/Admin/UserDetails?id=@training.ComponentId" class="btn btn-info btn-sm">User List</a>
                                    <a href="/Admin/EditTraining?id=@training.ComponentId" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/Admin/DeleteTraining?id=@training.ComponentId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No training records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
