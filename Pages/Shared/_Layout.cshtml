<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ward Alert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">




</head>
<body class="bg-slate-900 text-black">

    <!--
    <div class="floating-container" id="kite-container">
       </div>
    -->


    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-2">
            <div class="container d-flex justify-content-between align-items-center">

                <!-- Left: Logo and Branding -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/23/Emblem_of_Nepal.svg/500px-Emblem_of_Nepal.svg.png" height="40" class="me-2">
                    <div>
                        <div>ललितपुर महानगरपालिका</div>
                        <small>Ward 17 Lukhunsi, Lalitpur</small>
                    </div>
                </a>

                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Right: Nav links -->
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">

                        <!-- Nav links with red text -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-page="/Events">Events</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-danger" href="#" id="trainingsDropdown" role="button" data-bs-toggle="dropdown">
                                All Trainings
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-danger" href="/Trainings/Ongoing">Ongoing Trainings</a></li>
                                <li><a class="dropdown-item text-danger" href="/Trainings/Upcoming">Upcoming Trainings</a></li>
                                <li><a class="dropdown-item text-danger" href="/Trainings/Expired">Expired Trainings</a></li>
                            </ul>
                        </li>

                        <!-- Admin Login or Dashboard -->
                        @if (Context.Session.GetString("Login") == "true")
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-danger ms-2" asp-area="" asp-page="/Admin/Dashboard">Dashboard</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-danger ms-2" asp-area="" asp-page="/Login">Admin Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Marquee Section for Separation (Between Navbar and Main Content) -->
    <div class="bg-danger text-white py-2">
        <div class="marquee-wrapper">
            <div class="marquee-content">
                Welcome to ललितपुर महानगरपालिका | Stay updated with our events and trainings. 
            </div>
        </div>
    </div>

    <main role="main" class="">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
