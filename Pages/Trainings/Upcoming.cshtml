 @page
@using wardalert.Pages.trainings
@model UpcomingModel
@{
}
<style>
    .train {
        display: flex;
        gap: 80px; /* Adds spacing between forms */
        flex-wrap: wrap; /* Ensures forms wrap to the next line if needed */
        justify-content: center; /* Centers the forms horizontally */
        position: relative;
        top:120px;
      
  
        
    }

    form {
     
        width: 500px;
        padding: 30px;
        margin-left:70px;
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds a subtle shadow */
        text-align:justify;
    }

    

    form label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    form input {
        width: calc(100% - 20px); /* Adjusts for padding */
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

    form button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
    }

        form button:hover {
            background: #0056b3;
        }
        .description{
           
            word-spacing:0.22px;
        }

</style>

<div class="train">
    @foreach (var train in Model.Trainings)
    {
        <form method="post" class="describe">
            <p>
                <h2 class="title">@train.Trainingtitle</h2>
            </p>
            <br />

            <p class="description">

                @train.Trainingdescription

            </p>

            <p>
                <h4 class="date">Date:@train.Date</h4>
            </p>

            <p>
                <h4 class="time">Time:@train.Time</h4>
            </p>
            <br />
            <div class="form-group">
                <label>Please Fill The Form To Register:</label>

                <div class="form-group">
                    <label >Training</label>
                    <input type="text" value="@train.Trainingtitle" asp-for="Training" required />
                </div>
                <label >Name</label>
                <input type="text"  asp-for="Name" required />
            </div>

            <div class="form-group">
                <label >Address</label>
                <input type="text" asp-for="Address" required />
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input type="text" asp-for="Phone" required />
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        }
        </div>
        
    






















