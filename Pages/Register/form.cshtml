@page
@model wardalert.Pages.Register.formModel
@{
}

<style>
    /* Center the form directly */
    .form-box {
        width: 100%;
        max-width: 400px; /* Adjust width as needed */
        margin: 100px auto; /* Centers it without a flex container */
        padding: 20px;
        text-align: center; /* Center text inside */
    }

    /* Center the h1 */
    h3 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    /* Ensure form elements take full width */
    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
    }

    /* Make the button full width */
    .btn-block {
        width: 100%;
    }
</style>

<div class="form-box">
    <h3>Register for the Training</h3>

    <!-- Error message display -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" asp-for="Name" required class="form-control" placeholder="Ram Bahadur" />
        </div>

        <div class="form-group">
            <label for="address" class="form-label">Address</label>
            <input type="text" asp-for="Address" class="form-control" id="address" placeholder="Chyasal Lalitpur" />
        </div>

        <div class="form-group">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" asp-for="Phone" required class="form-control" id="phone" placeholder="9876543210" />
        </div>

        <div class="form-group">
            <label for="gender" class="form-label">Gender</label>
            <input type="text" asp-for="Gender" class="form-control" id="gender" placeholder="" />
        </div>

        <div class="form-group">
            <label for="file" class="form-label">Upload Citizenship</label>
            <input type="file" id="file" asp-for="UploadedFile" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>
</div>
